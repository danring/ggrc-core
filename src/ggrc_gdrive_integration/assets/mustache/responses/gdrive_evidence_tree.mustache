  <li class="tree-item" data-object-id="{{instance.id}}" data-object-type="{{instance.class.table_singular}}">
    <div class='item-main' {{data 'model'}}>
      <a href="javascript://" class="openclose">
        <div class='row-fluid'>
          <div class='span12'>
            <div class='item-data'>
              <div class='tree-title-area'>
                <i class="grcicon-{{instance.class.table_singular}}-color"></i>
                {{firstnonempty instance.title instance.link}}
                <span class="option">
                </span>
              </div>
            </div>
          </div>
        </div>
      </a>
    </div>

    {{#if expanded}}
    <div class="tier-2-info item-content">
      <div class="tier-2-info-content">

        <div class="row-fluid">

          <div class="span6">&nbsp;</div>

          <div class="span6">
          {{#if mappings}}
          {{#is_allowed_all 'delete' mappings}}
            {{#using request=parent_instance.request}}{{#with_mapping "folders" request}}
            <a href="javascript://" class="info-action unmap pull-right" data-toggle="modal-ajax-unmapform" data-object-plural="{{model.table_plural}}" data-object-singular="{{model.model_singular}}" data-modal-reset="reset" data-modal-title="Warning" data-modal-class="modal" data-object-id="{{instance.id}}" data-content-view="/static/mustache/responses/confirm_delete_evidence.mustache" data-object-params='{ "folder": { "title": "{{folders.0.instance.title}}", "link": "{{folders.0.instance.alternateLink}}" } }' href="javascript://">
              {{#result}}<span class="result" {{data 'result'}}></span>{{/result}}
              <i class="grcicon-remove"></i>
              Unmap
            </a>
            {{/with_mapping}}{{/using}}
          {{/is_allowed_all}}
          {{/if}}
          </div>

        </div>

        <div class="row-fluid">
          <div class="span12">
            {{#if instance.description}}
            <div class="tree-description short">
              {{{instance.description}}}
            </div>
            {{{show_long}}}
            {{else}}
              <i>No description</i>
            {{/if}}
          </div>
        </div>


        <div class="row-fluid">
          <div class="span12">
            <div class="tree-info">
              GDrive Path: 
              <a class="reference" data-popover-trigger="sticky-hover" data-sticky-popover="true" data-content="{{renderLive '/static/mustache/pbc/iframe_tooltip.mustache' url=instance.link}}" href="{{schemed_url instance.link}}" target="_blank">
                <sticky-data class="popover-data-title">
                  <div class='row-fluid'>
                    <div class='span12'>
                      <h3>
                        <i class='grcicon-link'></i> 
                        Viewing <a href="{{schemed_url instance.link}}" target="_blank">{{firstnonempty instance.title instance.link}}</a>
                      </h3>
                    </div>
                  </div>
                </sticky-data>
                /{{#using request=parent_instance.request}}{{#with_mapping 'folders' request}}{{folders.0.instance.title}}{{/with_mapping}}{{/using}}/{{#with_mapping 'files' instance}}{{files.0.instance.title}}{{/with_mapping}}
              </a>
              <span class='option'>
              </span>
            </div>
          </div>
        </div>

        <div class="row-fluid">
          <div class="span12">
            <div class="tree-info">
              {{#with_mapping 'files' instance}}
                {{#defer "revisions" files.0.instance.findRevisions}}
                  {{#with revisions.0}}
                  Added by:
                  {{lastModifyingUserName}}
                  on
                  {{localize_date modifiedDate}}
                  {{/with}}
                {{/defer}}
              {{/with_mapping}}
              </span>
            </div>
          </div>
        </div>

        {{{renderLive '/static/mustache/base_objects/mappings_detail.mustache' result=result parent_instance=parent_instance}}}
        {{#is_allowed 'update' instance}}
        <div class="row-fluid">
          <div class="span12">
            <a href="javascript://" data-toggle="modal-ajax-form" data-modal-reset="reset" data-modal-class="modal-wide" data-object-singular="Document" data-object-plural="documents" data-object-id="{{instance.id}}" data-object-params='{ "{{parent_instance.class.table_singular}}": { "id" : {{parent_instance.id}}, "title" : "{{parent_instance.title}}" }, "modal_title" : "Edit Evidence" }'>
            <i class="grcicon-edit"></i>
            Edit Evidence
          </a>

          </div>
        </div>
        {{/is_allowed}}
      </div>

      {{#if draw_children}}
        {{#if child_options.length}}
          {{#prune_context}} {{! this line is just chopping the context stack down to one element}}
            <div class="inner-tree">
              <h6>Mapped Objects ({{child_count}})</h6>
              {{#child_options}}
                <ul class="tree-structure new-tree" {{data 'options'}} {{ (el) -> el.cms_controllers_tree_view(el.data("options")) }}></ul>
              {{/child_options}}
            </div>
          {{/prune_context}}
        {{/if}}
      {{/if}}

    </div>
    {{/if}}
  </li>
